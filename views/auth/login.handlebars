<section class="container">
    <article>
        <div class="col-md-4 mx-auto card"
            style="margin-top: 4%; border: 0.5px solid rgb(138, 131, 131); background-color: rgb(218, 208, 208); box-shadow: 7px 10px 20px rgb(48, 48, 48);">
            <h3 class="text-uppercase font-weight-bold border-bottom"
                style="margin-top: 3%; color: blue; text-align: center;">Login
            </h3>
            <form action="/auth/login" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" style="border: 0.5px solid rgb(138, 131, 131);" id="email"
                        name="email" placeholder="enter email" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" style="border: 0.5px solid rgb(138, 131, 131);"
                        id="password" name="password" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Login</button>
                </div>
            </form>
        </div>
    </article>
</section>